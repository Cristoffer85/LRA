#:kivy 2.3.0

<FUNRegister>:
#------------ Total Layout -----------------------------------------------------------------------------------------#
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 60
    #------------ Top row with label and Race Setup details --------------------------------------------------------#
        FloatLayout:
            size_hint: (1, 0.1)
        # Top label (Left)
            Label:
                text: "SUMMARY:"
                bold: True
                size_hint: None, None
                size: '200dp', '50dp'
                pos_hint: {'x': 0, 'top': 1}
                color: 1, 1, 1, 1  # White text color
                font_size: '20sp'
                halign: 'left'
                valign: 'top'
                text_size: self.size

        # Race setup details (Right)
            GridLayout:
                cols: 2
                spacing: 5
                size_hint: None, None
                size: '600dp', '50dp'
                pos_hint: {'right': 1, 'top': 1} 

            # --------- Class selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'  # Reduced height
                    padding: [2, 2]
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "Class: " + root.class_selection
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'

            # --------- Registration time selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'
                    padding: [2, 2]
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "Registration Time: " + root.registrationtime_selection
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'

            # --------- Heat length selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'
                    padding: [2, 2]

                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: "Heat Length: " + root.heatlength_selection
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'  # Reduced font size

            # --------- Warmup selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'
                    padding: [2, 2]

                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: "Warmup: " + root.warmup_selection
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'  # Reduced font size

            # --------- Shortest laptime selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'
                    padding: [2, 2]

                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: "Shortest Laptime: " + root.shortest_laptime_selection
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'  # Reduced font size

            # --------- Auto start after warmup selection -------------
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '25dp'
                    padding: [2, 2]

                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: "Automatically Start After Warmup: " + ("Yes" if root.auto_start_after_warmup else "No")
                        color: 0, 0, 0, 1  # Black text
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        font_size: '16sp'  # Reduced font size

        
