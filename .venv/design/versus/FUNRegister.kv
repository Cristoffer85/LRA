    #------------ Navigation with Countdown Timer centered --------------------------------------------------------#
        FloatLayout:
            size_hint: (1, 0.2)
        # Back button (left)
            Button:
                text: 'BACK'
                bold: True
                font_size: '20sp'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0, 'y': 0}
                on_press: root.go_to_funstart()

        # Countdown Timer (center)
            Label:
                id: countdown_label
                text: "Drive participating cars past startline!"
                font_size: '20sp'
                markup: True
                color: 0.733, 0.733, 0.733, 1  # Light grey color (same as #BBBBBB)
                size_hint: None, None
                size: '300dp', '50dp'  # Adjust size as needed
                pos_hint: {'center_x': 0.5, 'y': 0}
                opacity: 0  # Initially invisible
        # Start button (right)
            Button:
                id: start_button
                bold: True
                font_size: '20sp'
                text: 'START Registration'
                size_hint: None, None
                size: '190dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'right': 1, 'y': 0}
                on_press: root.start_countdown(countdown_label, self)
