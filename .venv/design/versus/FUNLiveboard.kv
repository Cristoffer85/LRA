#:kivy 2.0.3

<FUNLiveboard>:
#------------ Total Layout ---------------------------------------------------------------------------------------------#
    FloatLayout:
        padding: 20
        spacing: 60
    #------------ Top section with class selection, countdown, and home button -----------------------------------------#
        FloatLayout:
            size_hint: (1, 0.1)
            pos_hint: {'top': 1}
        #------------ Class Selection Label (Left) ---------------------------------------------------------------------#
            Label:
                id: class_label
                text: "Class: Not Selected"
                font_size: '24sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: '200dp', '50dp'
                pos_hint: {'x': 0, 'y': 0}
                valign: 'middle'
                halign: 'left'
        #------------ Countdown Label (Center) -------------------------------------------------------------------------#
            Label:
                id: countdown_label
                text: "00:00"
                font_size: '48sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: '200dp', '50dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                halign: 'center'
                text_size: self.size
        #------------ Reset Race Button (Right) ------------------------------------------------------------------------#
            Button:
                size_hint: None, None
                size: '40dp', '40dp'
                background_normal: 'images/resetrace.png'
                border: [0, 0, 0, 0]
                pos_hint: {'right': 0.95, 'center_y': 0.5}
                on_press: root.reset_to_countdown()
    #------------ Driver details section -------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.9)
            pos_hint: {"top": 0.9}
            padding: [0, 10, 0, 0]
        #------------ Table Headings -----------------------------------------------------------------------------------#
            GridLayout:
                cols: 6
                size_hint_y: None
                height: '30dp'
                Label:
                    text: "DRIVER"
                    color: 1, 1, 1, 1
                Label:
                    text: "LAPS"
                    color: 1, 1, 1, 1
                Label:
                    text: "LAST LAP"
                    color: 1, 1, 1, 1
                Label:
                    text: "BEST LAP"
                    color: 1, 1, 1, 1
                Label:
                    text: "AVG LAP"
                    color: 1, 1, 1, 1
                Label:
                    text: "AVG 5 LAPS"
                    color: 1, 1, 1, 1

        #------------ Driver 1 details ---------------------------------------------------------------------------------#
            GridLayout:
                cols: 6
                size_hint_y: None
                height: '30dp'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Driver 1"
                    color: 1, 1, 1, 1
                Label:
                    text: "12"
                    color: 1, 1, 1, 1
                Label:
                    text: "1:25"
                    color: 1, 1, 1, 1
                Label:
                    text: "1:22"
                    color: 1, 1, 1, 1
                Label:
                    text: "1:24"
                    color: 1, 1, 1, 1
                Label:
                    text: "1:23"
                    color: 1, 1, 1, 1
