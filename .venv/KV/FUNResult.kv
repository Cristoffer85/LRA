#:kivy 2.3.0

<FUNResult>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Top section with Home button in the top right
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint: (1, 0.1)

            Button:
                size_hint: None, None
                size: '30dp', '30dp'
                background_normal: 'images/home.png'
                border: [0, 0, 0, 0]
                on_press: root.go_to_home()

        Label:
            text: "RESULTS"
            size_hint: (1, 0.1)
            halign: 'center'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '24sp'
