#:kivy 2.3.0

<FUNResult>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Race Results"
            font_size: '32sp'
            color: 1, 1, 1, 1
            size_hint: (1, 0.2)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

#------------ Bottom navigation buttons on the same row and separate corners -------------------------------------------#
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Widget:
                size_hint_x: None
                width: self.parent.width - 220  # Adjust width based on button sizes

            Button:
                text: 'Back to Start'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'right': 1}
                on_press: root.go_to_index()
#-----------------------------------------------------------------------------------------------------------------------#