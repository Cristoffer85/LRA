#:kivy 2.3.0

<FUNRegister>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
    #------------ Top label ---------------------------------------------------------------------------------------------#
        Label:
            text: "SUMMARY:"
            size_hint: (1, 0.1)
            halign: 'left'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '20sp'

    #------------ Race setup details -------------------------------------------------------------------------------------#
        GridLayout:
            cols: 2
            spacing: 5
            size_hint: (0.8, 0.6)
            pos_hint: {'right': 1}

        # --------- Class selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'  # Reduced height
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Class: " + root.class_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Registration time selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Registration Time: " + root.registrationtime_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Heat length selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Heat Length: " + root.heatlength_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Warmup selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Warmup: " + root.warmup_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Shortest laptime selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Shortest Laptime: " + root.shortest_laptime_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Auto start after warmup selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Automatically Start After Warmup: " + ("Yes" if root.auto_start_after_warmup else "No")
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

    #------------ Driver details -------------------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.4)

        #------------ Driver 1 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 1: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 2 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 2: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 3 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 3: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 4 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 4: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

#------------ Countdown Timer, initially invisible ------------------------------------------------------------------------------------------#
        Label:
            id: countdown_label
            text: "Drive participating cars past startline!"
            font_size: '20sp'  # Reduced font size
            color: 1, 1, 1, 1  # White text color
            size_hint_y: None
            height: '50dp'
            opacity: 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Button:
                text: 'Back'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0}
                on_press: root.go_to_funstart()

            Widget:
                size_hint_x: None
                width: self.parent.width - 220

            Button:
                id: start_button
                text: 'START Registration'
                size_hint: None, None
                size: '130dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.start_countdown(countdown_label, self)
