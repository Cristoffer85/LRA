#:kivy 2.3.0

<FUNRegister>:
#------------ Layout for FUNStart ----------------------------------------------------------------------------------#
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
    #------------ Top label --------------------------------------------------------------------------------------------#
        Label:
            text: "SUMMARY:"
            bold: True
            size_hint: (1, 0.1)
            halign: 'left'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '20sp'

    #------------ Race setup details -----------------------------------------------------------------------------------#
        GridLayout:
            cols: 2
            spacing: 5
            size_hint: (0.8, 0.6)
            pos_hint: {'right': 1}

        # --------- Class selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'  # Reduced height
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Class: " + root.class_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Registration time selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Registration Time: " + root.registrationtime_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Heat length selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Heat Length: " + root.heatlength_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Warmup selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Warmup: " + root.warmup_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Shortest laptime selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Shortest Laptime: " + root.shortest_laptime_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

        # --------- Auto start after warmup selection -------------
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '25dp'
                padding: [2, 2]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Automatically Start After Warmup: " + ("Yes" if root.auto_start_after_warmup else "No")
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Reduced font size

    #------------ Driver details ---------------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.4)

        #------------ Driver 1 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 1: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 2 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 2: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 3 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 3: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

        #------------ Driver 4 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 4: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
                    font_size: '16sp'  # Adjusted font size

    #------------ Navigation, with Countdown Timer -----------------------------------------------------------------------#
        FloatLayout:
            size_hint: (1, 0.2)

            # Back, to FUNStart
            Button:
                text: 'BACK'
                bold: True
                font_size: '20sp'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0, 'y': 0}  # Align to the bottom left corner
                on_press: root.go_to_funstart()

            # Countdown Timer, placed in the middle
            Label:
                id: countdown_label
                text: "Drive participating cars past startline!"
                font_size: '20sp'
                color: 1, 1, 1, 1  # White text color
                size_hint: None, None
                size: '300dp', '50dp'  # Adjust size as needed
                pos_hint: {'center_x': 0.5, 'y': 0}  # Center horizontally between the buttons
                opacity: 0  # Initially invisible

            # Forward, to FUNWarmup
            Button:
                id: start_button  # Has an id/reference because of the countdown logic
                bold: True
                font_size: '20sp'
                text: 'START Registration'
                size_hint: None, None
                size: '190dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'right': 1, 'y': 0}  # Align to the bottom right corner
                on_press: root.start_countdown(countdown_label, self)


