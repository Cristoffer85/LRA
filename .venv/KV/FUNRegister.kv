#:kivy 2.3.0

<FUNRegister>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

#------------ Top label ---------------------------------------------------------------------------------------------#
        BoxLayout:
            size_hint: (0.2, 0.1)
            padding: [10, 10]
            pos_hint: {'x': 0}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background color
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Summary:"
                color: 0, 0, 0, 1  # Black text color
                halign: 'left'
                valign: 'middle'
                text_size: self.size

#------------ Race setup details -------------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 3
            size_hint: (0.4, 0.3)
            pos_hint: {'right': 1}

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Class: " + root.class_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

            BoxLayout:
                size_hint_y: None
                height: '1dp'  # Thinner separator
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Black background
                    Rectangle:
                        pos: self.pos
                        size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Registration Time: " + root.registrationtime_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

            BoxLayout:
                size_hint_y: None
                height: '1dp'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Black background
                    Rectangle:
                        pos: self.pos
                        size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Heat Length: " + root.heatlength_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

            BoxLayout:
                size_hint_y: None
                height: '1dp'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Black background
                    Rectangle:
                        pos: self.pos
                        size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Warmup: " + root.warmup_selection
                    color: 0, 0, 0, 1  # Black text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'
#------------ Driver details -------------------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.4)

    #------------ Driver 1 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Driver 1: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

    #------------ Driver 2 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Driver 2: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

    #------------ Driver 3 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 3: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

    #------------ Driver 4 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Driver 4: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

#------------ Countdown Timer, initially invisible ------------------------------------------------------------------------------------------#
        Label:
            id: countdown_label
            text: "Time Remaining: "
            font_size: '24sp'
            color: 1, 1, 1, 1  # White text color
            size_hint_y: None
            height: '50dp'
            # Make sure the timer label is visible by default
            opacity: 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Button:
                text: 'Back'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0}
                on_press: root.go_to_funstart()

            Widget:
                size_hint_x: None
                width: self.parent.width - 220

            Button:
                id: start_button
                text: 'START Registration'
                size_hint: None, None
                size: '130dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.start_countdown(countdown_label, self)
