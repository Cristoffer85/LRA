#:kivy 2.3.0

<FUNLiveboard>:
#------------ Total Layout ---------------------------------------------------------------------------------------------#
    FloatLayout:
        padding: 20
        spacing: 60
    #------------ Top section with class selection, countdown, and home button -----------------------------------------#
        FloatLayout:
            size_hint: (1, 0.1)
            pos_hint: {'top': 1}

        #------------ Class Selection Label (Left) ---------------------------------------------------------------------#
            Label:
                id: class_label
                text: "Class: Not Selected"
                font_size: '24sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: '200dp', '50dp'
                pos_hint: {'x': 0, 'y': 0}
                valign: 'middle'
                halign: 'left'

        #------------ Countdown Label (Center) -------------------------------------------------------------------------#
            Label:
                id: countdown_label
                text: "00:00"
                font_size: '48sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: '200dp', '50dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                halign: 'center'
                text_size: self.size

        #------------ Home Button (Right) ------------------------------------------------------------------------------#
            Button:
                size_hint: None, None
                size: '30dp', '30dp'
                background_normal: 'images/home.png'
                border: [0, 0, 0, 0]
                pos_hint: {'right': 0.95, 'center_y': 0.5}
                on_press: root.go_to_home()

    #------------ Driver details section -------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.9)
            pos_hint: {"top": 0.9}
            padding: [0, 10, 0, 0]

        #------------ Driver 1 details ---------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Driver 1: "
                    color: 1, 1, 1, 1
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

