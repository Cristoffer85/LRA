#:kivy 2.3.0

<FUNLiveboard>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            id: countdown_label
            text: "00:00"
            font_size: '48sp'
            color: 1, 1, 1, 1  # White text
            bold: True
            size_hint: (1, 0.8)
            valign: 'top'
            halign: 'center'
            text_size: self.size

            #------------ Driver details -------------------------------------------------------------------------------------------#
        GridLayout:
            cols: 1
            spacing: 5
            size_hint: (1, 0.4)

    #------------ Driver 1 details ---------------------------------------------------------------------------------------#
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: '30dp'
                padding: [10, 5]

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Light grey background
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: "Driver 1: "
                    color: 1, 1, 1, 1  # White text
                    text_size: self.size
                    valign: 'middle'
                    halign: 'left'

