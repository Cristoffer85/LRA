#:kivy 2.3.0

<FUNLiveboard>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            id: countdown_label
            text: "00:00"
            font_size: '48sp'
            color: 1, 1, 1, 1  # White text
            bold: True
            size_hint: (1, 0.8)
            valign: 'top'
            halign: 'center'
            text_size: self.size
