#:kivy 2.3.0

<FUNLiveboard>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Label at the top left
        Label:
            text: "Live:"
            size_hint: (1, 0.1)
            halign: 'left'
            valign: 'top'
            text_size: self.size

#------------ Bottom navigation buttons on the same row and separate corners -------------------------------------------#
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Button:
                text: 'Back'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0}
                on_press: root.go_to_funcountdown()

            Widget:
                size_hint_x: None
                width: self.parent.width - 220  # Adjust width based on button sizes

            Button:
                text: 'Next'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'right': 1}
                on_press: root.go_to_funresult()
#-----------------------------------------------------------------------------------------------------------------------#