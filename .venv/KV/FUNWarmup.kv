#:kivy 2.3.0

<FUNWarmup>:
#------------ Layout for FUNStart --------------------------------------------------------------------------------------#
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        #------------ Top label ----------------------------------------------------------------------------------------#
        Label:
            text: "WARMUP"
            bold: True
            size_hint: (1, 0.1)
            halign: 'center'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '24sp'

        #------------ Countdown ----------------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.7) 
            padding: 0
            spacing: 0

            Label:
                id: countdown_label
                text: "Time Remaining: "
                font_size: '48sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: self.texture_size  
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        #------------ Navigation ----------------------------------------------------------------------------------------#
        FloatLayout:
            size_hint: (1, 0.2)
            # Back, to FUNRegister
            Button:
                text: 'BACK'
                bold: True
                font_size: '20sp'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0, 'y': 0}
                on_press: root.go_to_funregister()

