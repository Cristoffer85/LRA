#:kivy 2.3.0

<FUNWarmup>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Label at the top left
        Label:
            text: "WARMUP"
            size_hint: (1, 0.1)
            halign: 'center'
            valign: 'top'
            text_size: self.size

        # Countdown timer centered in the middle
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.7)  # Takes most of the screen height
            padding: 0
            spacing: 0

            Label:
                id: countdown_label
                text: "Time Remaining: "  # This will be updated by Python code
                font_size: '48sp'
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: self.texture_size  # Adjust to text size
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center horizontally and vertically

        # Bottom navigation buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Button:
                text: 'Back'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0}
                on_press: root.go_to_funregister()

            Widget:
                size_hint_x: None
                width: self.parent.width - 220  # Adjust width based on button sizes
