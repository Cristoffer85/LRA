#:kivy 2.3.0

<FUNStart>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

#------------ Label at the top left -------------------------------------------------------------------------------------#
        Label:
            text: "Race Setup:"
            size_hint: (1, 0.1)
            halign: 'left'
            valign: 'top'
            text_size: self.size

#------------ Dropdown lists --------------------------------------------------------------------------------------------#

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint: (1, 0.2)

        # Class Dropdown
        Spinner:
            text: "Class:"
            values: ["Option 1", "Option 2", "Option 3", "Option 4"]

        # Registrationtime Dropdown
        Spinner:
            text: "Registrationtime:"
            values: ["Option 1", "Option 2", "Option 3", "Option 4"]

        # Heatlength Dropdown
        Spinner:
            text: "Heatlength:"
            values: ["Option 1", "Option 2", "Option 3", "Option 4"]

        # Warmup Dropdown
        Spinner:
            text: "Warmup:"
            values: ["Option 1", "Option 2", "Option 3", "Option 4"]

#------------ Bottom Navigate buttons -----------------------------------------------------------------------------------#

        # Size and position
        BoxLayout:
            size_hint: None, None
            size: '200dp', '40dp'
            pos_hint: {'x': 0, 'y': 0}

            # Back
            MyButton:
                text: 'Back'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.go_to_index()

            # Next
            MyButton:
                text: 'Next'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.go_to_funregister()

#------------------------------------------------------------------------------------------------------------------------#