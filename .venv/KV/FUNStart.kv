#:kivy 2.3.0

<FUNStart>:
    FloatLayout:

#--- Race Setup box in top left corner ------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: '200dp', '100dp'
            pos_hint: {'x': 0, 'top': 1}
            padding: 10
            MyLabel:
                text: 'Race Setup:'
                bold: True
                halign: 'left'

#--- Main layout for buttons -------------------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: '700dp', '400dp'
            pos_hint: {'x': 0.25, 'top': 1}

    # Column for Heatlength, Registrationtime and Warmup buttons
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                spacing: 10
                padding: [0, 10, 10, 10]

                DropdownButton:
                    id: heatlength_button
                    text: 'Heatlength (min)'
                    background_color: 0.6, 1, 0.6, 1
                    color: 0, 0, 0, 1
                    on_release: root.open_heatlength_dropdown(self)

                DropdownButton:
                    id: registrationtime_button
                    text: 'Time to Register (min)'
                    background_color: 0.6, 1, 0.6, 1
                    color: 0, 0, 0, 1
                    on_release: root.open_registrationtime_dropdown(self)

                DropdownButton:
                    id: warmup_button
                    text: 'Warmup (min)'
                    background_color: 0.6, 1, 0.6, 1
                    color: 0, 0, 0, 1
                    on_release: root.open_warmup_dropdown(self)

    # Column for Class button
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                padding: [10, 10, 0, 10]

                DropdownButton:
                    id: class_button
                    text: 'Class'
                    background_color: 0.6, 1, 0.6, 1
                    color: 0, 0, 0, 1
                    on_release: root.open_class_dropdown(self)

#------------ Bottom Navigate buttons -----------------------------------------------------------------------------------#

        # Size and position
        BoxLayout:
            size_hint: None, None
            size: '200dp', '40dp'
            pos_hint: {'x': 0, 'y': 0}

            # Back
            MyButton:
                text: 'Back'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.go_to_index()

            # Next
            MyButton:
                text: 'Next'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                on_press: root.go_to_funregister()

#-----------------------------------------------------------------------------------------------------------------------#