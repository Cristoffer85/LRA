#:kivy 2.3.0

<Index>:
    FloatLayout:

#--- Centered Label box at the top --------------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: '200dp', '100dp'
            pos_hint: {'center_x': 0.5, 'top': 1}
            padding: 10
            MyLabel:
                text: 'Welcome to Latera! Make a selection below:'
                bold: True
                halign: 'center'

#--- Layout for below columns -------------------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: '700dp', '400dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    ################################### Top row for column labels ###################################
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '50dp'  # Fixed height to accommodate the labels
                spacing: 10

                MyLabel:
                    text: 'Solo Racing'
                    bold: True
                    halign: 'center'
                    size_hint_x: 0.5

                MyLabel:
                    text: 'Versus Racing'
                    bold: True
                    halign: 'center'
                    size_hint_x: 0.5

    ################################### Bottom row for buttons ######################################
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1  # Make this layout expand to fill the remaining space
                spacing: 10

                # //////////////////////////// Left column \\\\\\\\\\\\\\\\\\\\\\\\\\\\\
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    spacing: 10
                    padding: [0, 10, 10, 10]
                    # Centering buttons horizontally
                    Button:
                        text: 'Free Practice'
                        background_color: 255, 0, 0, 1                      # Red
                        pos_hint: {'center_x': 0.5}
                        on_press: print("Left Button 1 Pressed")

                    Button:
                        text: 'Time Trial'
                        background_color: 255, 0, 0, 1                      # Red
                        pos_hint: {'center_x': 0.5}
                        on_press: print("Left Button 2 Pressed")

                # //////////////////////////// Right column \\\\\\\\\\\\\\\\\\\\\\\\\\\\\
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    padding: [10, 10, 0, 10]
                    # Centering button horizontally
                    Button:
                        text: 'FUN Race'
                        background_color: 0, 255, 0, 1                      # Lime green
                        pos_hint: {'center_x': 0.5}
                        on_press: root.go_to_funstart()

#-----------------------------------------------------------------------------------------------------------------------#