#:kivy 2.0.3

<FUNCountdownToStart>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Label at the top left
        Label:
            text: "Countdown before start!"
            size_hint: (1, 0.1)
            halign: 'left'
            valign: 'top'
            text_size: self.size

        # Central message with white background
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.8)  # Make this layout take most of the vertical space
            padding: 20
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Place your cars behind the startline"
                font_size: '32sp'
                color: 0, 0, 0, 1  # Black text color
                size_hint: (1, 0.5)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # Countdown timer and buttons layout
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.2)
            padding: 20

            Label:
                id: countdown_label
                text: ""
                font_size: '48sp'
                color: 1, 0, 0, 1  # Red text color
                size_hint: (1, 0.5)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            Widget:  # Placeholder for spacing, can be removed if needed
                size_hint: (1, 0.5)

        # Bottom navigation buttons on the same row and separate corners
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)

            Button:
                text: 'Back'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.8, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'x': 0}
                on_press: root.go_to_funwarmup()
                opacity: 0  # Hide initially

            Widget:
                size_hint_x: None
                width: self.parent.width - 220  # Adjust width based on button sizes

            Button:
                id: next_button
                text: 'Next'
                size_hint: None, None
                size: '100dp', '50dp'
                background_color: 0.1, 0.8, 0.1, 1
                color: 1, 1, 1, 1
                pos_hint: {'right': 1}
                on_press: root.start_countdown(countdown_label, next_button)