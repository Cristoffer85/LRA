#:kivy 2.0.3

<FUNCountdownToStart>:
#------------ Layout for FUNStart --------------------------------------------------------------------------------------#
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
    #------------ Top row ----------------------------------------------------------------------------------------------#
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint: (1, 0.1)
            # Home button in the top right
            Button:
                size_hint: None, None
                size: '50dp', '50dp'
                background_normal: 'images/home.png'
                border: [0, 0, 0, 0]
                on_press: root.go_to_home()
        # Top label
        Label:
            text: "COUNTDOWN START!"
            bold: True
            size_hint: (1, 0.1)
            halign: 'center'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '24sp'

    #------------ Middle label (Place cars behind startline) -----------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.7, 0.4)
            padding: 20
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Place your cars behind the startline!"
                font_size: '28sp' 
                color: 0, 0, 0, 1  # Black text color
                halign: 'center'
                valign: 'middle'
                text_size: self.size

    #------------ Countdown --------------------------------------------------------------------------------------------#
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.5)
            padding: 20

            Label:
                id: countdown_label
                text: ""
                font_size: '48sp'
                color: 1, 0, 0, 1  # Red text color
                size_hint: (1, 0.5)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            Widget:
                size_hint: (1, 0.5)

    #------------ Navigation -------------------------------------------------------------------------------------------#
        FloatLayout:
            size_hint: (1, 0.1)

            Button:
                id: next_button
                text: 'START Countdown'
                bold: True
                font_size: '20sp'
                size_hint: None, None
                size: '200dp', '50dp'
                background_color: 0.5, 1, 0, 1  # Lime background
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5, 'y': 0}
                on_press: root.start_countdown(countdown_label, next_button)
