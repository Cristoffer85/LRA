#:kivy 2.0.3

<FUNCountdownToStart>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Top section with Home button in the top right
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint: (1, 0.1)

            Button:
                size_hint: None, None
                size: '20dp', '20dp'
                background_normal: 'images/home.png'  # Path to your image
                background_down: 'images/home.png'  # Optional, if you want a different image when the button is pressed
                border: [0, 0, 0, 0]  # Removes the default button border
                on_press: root.go_to_home()

        Label:
            text: "COUNTDOWN START!"
            size_hint: (1, 0.1)
            halign: 'center'
            valign: 'top'
            text_size: self.size
            color: 1, 1, 1, 1 # White text color
            font_size: '24sp'

        # Central message with white background
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.7, 0.4)  # Smaller layout
            padding: 20
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the box
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Place your cars behind the startline!"
                font_size: '28sp'  # Smaller font size
                color: 0, 0, 0, 1  # Black text color
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # Countdown timer and buttons layout
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.5)
            padding: 20

            Label:
                id: countdown_label
                text: ""
                font_size: '48sp'
                color: 1, 0, 0, 1  # Red text color
                size_hint: (1, 0.5)
                halign: 'center'
                valign: 'middle'
                text_size: self.size

            Widget:  # Placeholder for spacing, can be removed if needed
                size_hint: (1, 0.5)

        # Bottom navigation buttons on the same row and separate corners
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)

            Widget:
                size_hint_x: None
                width: self.parent.width - 200  # Adjust width based on button sizes

            Button:
                id: next_button
                text: 'Start Countdown'
                size_hint: None, None
                size: '200dp', '50dp'
                background_color: 0.5, 1, 0, 1 # Lime background
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5}  # Center the button horizontally
                on_press: root.start_countdown(countdown_label, next_button)